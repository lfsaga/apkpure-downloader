{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*": ["src/types/*"]
      },
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "src/**/*.ts"],
    "exclude": ["node_modules", "dist", "tests/**/*.test.ts"]
  }
  